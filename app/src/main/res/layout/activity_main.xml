<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".MainActivity">

  <com.mrinmoy.karan.GradientTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="KALYANI"
      android:textSize="50sp"
      android:fontFamily="@font/poppins_bold"
      android:textStyle="bold"
      app:startColor="#3F51B5"
      android:layout_gravity="left"
      android:layout_marginStart="16dp"
      app:centerColor="#9C27B0"
      android:id="@+id/txt1"
      app:endColor="#E91E63"
      app:angle="45"/>
    <com.mrinmoy.karan.GradientTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GOVERNMENT"
        android:textSize="50sp"
        android:fontFamily="@font/poppins_bold"
        android:textStyle="bold"
        app:startColor="#FFEB3B"
        android:layout_gravity="left"
        android:layout_marginStart="16dp"
        android:layout_marginTop="-40dp"
        android:layout_below="@id/txt1"
        android:id="@+id/txt2"
        app:centerColor="#FF9800"
        app:endColor="#FF5722"
        app:angle="45"/>
    <com.mrinmoy.karan.GradientTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENGINEERING"
        android:textSize="50sp"
        android:fontFamily="@font/poppins_bold"
        android:textStyle="bold"
        app:startColor="#4CAF50"
        android:layout_gravity="right"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="-40dp"
        android:layout_below="@id/txt2"
        android:id="@+id/txt3"
        app:centerColor="#CDDC39"
        app:endColor="#FFEB3B"
        app:angle="45"/>

    <com.mrinmoy.karan.GradientTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="COLLEGE"
        android:textSize="50sp"
        android:layout_below="@id/txt3"
        android:textStyle="bold"
        app:angle="45"
        android:layout_gravity="right"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="-40dp"
        android:id="@+id/txt4"
        app:centerColor="#A831A6"
        app:endColor="#01FF0B"
        app:startColor="#FF0057" />







</LinearLayout>